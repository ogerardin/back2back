<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <skipIfNotSupported/>
    <defaultCurrentUser/>
    <programGroup defaultName="back2back" />
    <lateShortcutInstall/>

    <shortcut name="Start back2back engine" target="$INSTALL_PATH/bin/startEngine.bat" iconFile="b2b.ico"/>
    <shortcut name="Show Tray icon" target="$INSTALL_PATH/bin/startTrayIcon.bat" iconFile="b2b.ico" condition="winTraySelected"/>

</izpack:shortcuts>