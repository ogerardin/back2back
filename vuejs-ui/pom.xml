<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <properties>
        <webapp.directory>src/main/webapp</webapp.directory>
        <skipNPMBuild>false</skipNPMBuild>
    </properties>

    <parent>
        <artifactId>back2back</artifactId>
        <groupId>org.ogerardin</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>back2back-vuejs-ui</artifactId>
    <description>
        UI built with VueJS. The code was initially generated with vue-cli.
    </description>


    <build>

        <resources>
            <resource>
                <!-- The webapp directory as generated by webpack -->
                <directory>${webapp.directory}/dist</directory>
                <!-- We put this into the static directory so that Spring Boot serves it through HTTP as static content -->
                <targetPath>static</targetPath>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>1.6</version>

                <configuration>
                    <skip>${skipNPMBuild}</skip>
                    <!-- This is where the webapp code resides -->
                    <workingDirectory>${webapp.directory}</workingDirectory>
                    <!-- This is where the local copies of ode and npm will be installed -->
                    <installDirectory>target</installDirectory>
                </configuration>

                <executions>
                    <execution>
                        <id>install node and npm</id>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <configuration>
                            <nodeVersion>v8.12.0</nodeVersion>
                            <npmVersion>6.4.1</npmVersion>
                        </configuration>
                    </execution>

                    <execution>
                        <id>npm install</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>

                    <execution>
                        <id>npm run build</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>run build</arguments>
                        </configuration>
                    </execution>

                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- Activating this profile will skip the whole web build -->
            <id>skip-web-build</id>
            <properties>
                <skipNPMBuild>true</skipNPMBuild>
            </properties>
        </profile>
    </profiles>
</project>
